{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "make build",
            "problemMatcher": {
                "owner": "lua",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    // Example: error: Source/main.lua:14: '>' expected near 'st'
                    "regexp": "^(warning|error): (.*):(\\d+):\\s+(.*)$",
                    "severity": 1,
                    "file": 2,
                    "line": 3,
                    "message": 4
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "make run",
            "problemMatcher": []
        },
        {
            "label": "Compile",
            "type": "shell",
            "command": "make compile",
            "problemMatcher": {
                "owner": "lua",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(warning|error): (.*):(\\d+):\\s+(.*)$",
                    "severity": 1,
                    "file": 2,
                    "line": 3,
                    "message": 4
                }
            },
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": []
        },
    ]
}